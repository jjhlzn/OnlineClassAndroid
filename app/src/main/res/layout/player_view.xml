<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="550dp"
              android:gravity="top"
              android:orientation="vertical" >

    <ImageView
        android:id="@+id/player_song_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:gravity="center_vertical|left"
        android:src="@drawable/backgroundimage"
        android:scaleType="fitXY"
        />

    <SeekBar
        android:id="@+id/player_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/player_startText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="@dimen/text_view_margin"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@android:color/background_dark"
            android:layout_alignParentLeft="true"
            android:text="00:00:00"/>
        <TextView
            android:id="@+id/player_totalText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginEnd="@dimen/end_text_margin"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_alignWithParentIfMissing="true"
            android:maxLines="1"
            android:textColor="@android:color/background_dark"
            android:text="00:00:00"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/player_prev_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_ios_music_backward"
            android:scaleType="fitXY"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/player_play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/icon_ios_music_play"
            android:scaleType="fitXY"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/player_next_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_ios_music_forward"
            android:scaleType="fitXY"
            android:background="@null"/>


    </LinearLayout>


</LinearLayout>