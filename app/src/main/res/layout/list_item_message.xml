<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:textSize="18dp"
        android:textColor="@color/price_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是一个标题"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/title"
        android:textSize="16dp"
        android:textColor="@color/messageDetailColor"
        android:lineSpacingMultiplier="1.1"
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是详情这是详情这是详情这是详情这是详情这是详情这是详情这是详情这是详情这是详情这是详情这是详情这是详情"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_below="@id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/time"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/keyword_color"
            android:textSize="13dp"
            android:text="1小时前"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/moreThanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="查看详情"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/moreThanImage"

            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="@color/keyword_color"
            android:src="@drawable/morethan"/>
    </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>