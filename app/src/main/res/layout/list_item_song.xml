<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:orientation="horizontal"
              android:background="@color/white">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/song_list_item_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|"
                    android:src="@drawable/albumimage_default"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
                
                <ImageView
                    android:id="@+id/song_list_item_playimage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/smallplay"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/song_list_item_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="25dp"
                            android:layout_marginLeft="0dp"

                            android:textSize="17sp"
                            android:gravity="center_vertical|left"
                            android:text="Name"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/song_list_item_date"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="30dp"
                            android:layout_marginRight="12dp"

                            android:textSize="13sp"
                            android:gravity="center_vertical|right"
                            android:text="2016-01"
                            android:textColor="@android:color/darker_gray"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/song_list_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="0dp"

                    android:textSize="13sp"
                    android:gravity="center_vertical|left"
                    android:text="desc"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="3dp"/>


        </LinearLayout>





</LinearLayout>
