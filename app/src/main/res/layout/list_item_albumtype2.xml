<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list_item_albumtype_viewgroup"
              android:layout_width="match_parent"
              android:layout_height="75dp"
              android:orientation="horizontal"
              android:background="@color/white"
              >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_bottom_border">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/albumType_list_item_image"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="22dp"
                            android:gravity="center_vertical|left"
                            android:src="@drawable/log"
                            />
                </LinearLayout>


                <TextView
                    android:id="@+id/albumType_list_item_name"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"

                    android:textSize="17sp"
                    android:gravity="center_vertical|left"
                    android:text=""/>

                <TextView
                    android:id="@+id/albumType_list_item_detail"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:gravity="center_vertical|left"
                    android:maxLines="2"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:gravity="right">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginBottom="26dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:src="@drawable/morethan"
                            />
                </LinearLayout>

        </LinearLayout>

</LinearLayout>
