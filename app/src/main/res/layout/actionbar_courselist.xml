<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:background="@color/statusbar_background">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"

        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentLeft="true">
        <ImageButton
            android:id="@+id/actionbar_back_button"
            android:layout_marginTop="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            android:padding="10dp"
            android:background="@null"
            android:visibility="invisible"
            />
    </RelativeLayout>



    <TextView
        android:id="@+id/actionbar_close_button"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:text="关闭"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="6dp"
        android:gravity="left|center_vertical"
        android:layout_alignParentLeft="true"
        android:textSize="18dp"
        android:visibility="invisible"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_text"

        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="20sp" />




    <include layout="@layout/actionbar_rightpart"
             android:id="@+id/rightPart"
             android:layout_width="60dp"
             android:layout_height="match_parent"
             android:layout_alignParentRight="true"
        />


</RelativeLayout>

