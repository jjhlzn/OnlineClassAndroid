<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="186dp"
              android:background="@color/white"
              >

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="马上通过以下方式分享给朋友"
        android:textAlignment="textStart"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/ccl_grey600"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/white">



    <LinearLayout

        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">
        <ImageButton
            android:id="@+id/weixinhaoyou_button"

            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/s_weixin"
            android:scaleType="fitXY"

            android:background="@null"/>
        <TextView
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="11dp"
            android:text="微信好友"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/pengyouquan_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/s_pengyouquan"
            android:scaleType="fitXY"
            android:background="@null"/>
        <TextView
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="11dp"
            android:text="微信朋友圈"/>
    </LinearLayout>


    <LinearLayout

        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/qqFriends_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/s_qq_friends"
            android:scaleType="fitXY"
            android:background="@null"/>
        <TextView
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="11dp"
            android:text="QQ好友"/>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="6dp">



        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="vertical">
            <ImageButton
                android:id="@+id/qzone_button"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/s_qzone"
                android:scaleType="fitXY"

                android:background="@null"/>
            <TextView
                android:paddingTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="QQ空间"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/weibo_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/s_weibo"
                android:scaleType="fitXY"
                android:background="@null"/>
            <TextView
                android:paddingTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="新浪微博"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/copylink_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/s_copy"
                android:scaleType="fitXY"
                android:background="@null"/>
            <TextView
                android:paddingTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="复制链接"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>