<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/advImage"
            android:layout_marginBottom="120dp"
            />

        <TextView
            android:id="@+id/skipAdvButton"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:text="跳过广告  3"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@color/fullscreen_secondary_line_color1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/peopleImage"/>

        <TextView
            android:id="@+id/advTipText"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:text="广告"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@color/fullscreen_secondary_line_color1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_below="@+id/peopleImage"/>
    </RelativeLayout>


</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:gravity="center_horizontal"
                  android:background="@color/white"
                  android:layout_gravity="bottom"
                  android:layout_marginBottom="30dp">



        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/log"
            android:id="@+id/imageView"
            android:layout_gravity="bottom"

            android:layout_marginRight="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="3dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="25dp"
                    android:layout_marginRight="4dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Android"
                    android:textSize="16dp"
                    android:textColor="#a4a1a1"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="copyright@巨胜网络 版权所有"
                android:textSize="14dp"
                android:textColor="#a4a1a1"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>