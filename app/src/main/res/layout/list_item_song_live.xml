<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:orientation="horizontal"
              android:background="@drawable/bottom_border">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/song_list_item_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|"
                    android:src="@drawable/albumimage_default"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
                
                <ImageView
                    android:id="@+id/song_list_item_playimage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/smallplay"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/song_list_item_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="25dp"
                            android:layout_marginLeft="0dp"

                            android:textSize="17sp"
                            android:gravity="center_vertical|left"
                            android:text="Name"
                            android:textColor="@android:color/black"/>



                </LinearLayout>

                <TextView
                    android:id="@+id/song_list_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="0dp"

                    android:textSize="13sp"
                    android:gravity="center_vertical|left"
                    android:text="desc"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.16"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:src="@drawable/listenpeopleicon"
                    />

                <TextView
                    android:id="@+id/listen_people_label"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="1000"
                    android:textSize="12sp"/>
        </LinearLayout>



</LinearLayout>
