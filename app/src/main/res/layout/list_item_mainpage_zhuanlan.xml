<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="vertical"
              android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|top">
                        <ImageView
                            android:id="@+id/zhuanLanImage"

                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="12dp"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/nameLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="0dp"
                                            android:textSize="17sp"
                                            android:gravity="center_vertical|left"
                                            android:text="商业经典案例课"
                                            android:maxLines="1"
                                            android:textColor="@android:color/black"/>

                                        <TextView
                                            android:id="@+id/latestLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="0dp"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center_vertical|left"
                                            android:text="赢家的方法"
                                            android:textAlignment="textStart"
                                            android:textColor="@color/gray_text"
                                            android:maxLines="1"
                                            android:textSize="13sp"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/priceInfoLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="4dp"

                                    android:gravity="center_vertical|left"
                                    android:text="199元/年"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/price_color"
                                    android:textSize="13sp"/>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/updateTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/latest_round_edittext_border_mainpage"
                            android:gravity="center_vertical|left"
                            android:paddingBottom="1dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:paddingTop="1dp"
                            android:text="19小时前更新"
                            android:textAlignment="textStart"
                            android:textColor="#676869"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/descriptionLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical|left"
                            android:text="赢家的方法"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:textStyle=""/>



                </LinearLayout>


        </LinearLayout>

</LinearLayout>
