<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="18dp">

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/comment_user_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/comment_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="0dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical|left"
                        android:text="漫天飞雪"

                        android:textColor="@android:color/black"/>

                    <TextView
                        android:paddingTop="3dp"
                        android:id="@+id/answerCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_toLeftOf="@+id/answerIcon"/>

                    <ImageView
                        android:paddingTop="1dp"
                        android:id="@+id/answerIcon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/comment"
                        android:layout_toLeftOf="@+id/thumbCountText"/>

                    <TextView
                        android:paddingTop="3dp"
                        android:id="@+id/thumbCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_toLeftOf="@+id/thumbIcon"/>

                    <ImageView
                        android:paddingTop="1dp"
                        android:id="@+id/thumbIcon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/thumb"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/comment_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical|left"
                    android:text="1天前"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal|top">

        <com.jinjunhang.onlineclass.ui.lib.MyEmojiTextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有谁知道房地产有哪些核心进口零部件.3213213  123"
        android:singleLine="false"
        android:textSize="15dp"

        android:textColor="@android:color/black"/>
    </LinearLayout>


    <com.jinjunhang.onlineclass.ui.lib.MyListView
        android:background="@color/answer_bg"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/answerListView">
    </com.jinjunhang.onlineclass.ui.lib.MyListView>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/textview_bottom_border"></LinearLayout>

</LinearLayout>
