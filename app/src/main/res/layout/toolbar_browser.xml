<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@android:color/white"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
    app:theme="@style/ThemeOverlay.AppCompat.Light">


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/transparent">

        <ImageButton
            android:id="@+id/actionbar_back_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            android:background="@null"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/actionbar_close_button"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:text="关闭"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"
            android:gravity="center|center_vertical"
            android:textSize="16dp"
            android:visibility="invisible"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionbar_text"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            style="@style/toolBarTitle"/>


        <RelativeLayout
            android:id="@+id/rightPart"
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <ImageButton
                android:id="@+id/actionbar_right_button"
                android:layout_toLeftOf="@+id/musicBtn"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:scaleType="fitXY"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/share_black"
                android:background="@null"
                android:visibility="visible"
                />

            <include layout="@layout/actionbar_rightpart"
                     android:id="@+id/rightPart1"
                     android:layout_width="48dp"
                     android:layout_height="match_parent"
                     android:layout_alignParentRight="true"
                />
        </RelativeLayout>



    </RelativeLayout>




</android.support.v7.widget.Toolbar>

