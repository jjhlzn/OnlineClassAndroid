<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="vertical"
              android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|top">
                        <ImageView
                            android:id="@+id/zhuanLanImage"
                            android:src="@drawable/rect_placeholder"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/firstline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_toLeftOf="@id/dingyueLabel"
                                    android:layout_marginRight="12dp"
                                    android:layout_alignParentLeft="true"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/nameLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="0dp"
                                            android:textSize="17sp"
                                            android:gravity="center_vertical|left"
                                            android:text="商业经典案例课"
                                            android:maxLines="1"
                                            android:textColor="@android:color/black"/>

                                        <TextView
                                            android:id="@+id/authorLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="0dp"
                                            android:layout_marginTop="5dp"
                                            android:textSize="13sp"
                                            android:gravity="center_vertical|left"
                                            android:text="Zhang san fen"
                                            android:textAlignment="textStart"
                                            android:textColor="@android:color/darker_gray"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/dingyueLabel"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="3dp"

                                    android:textSize="13sp"
                                    android:gravity="center_vertical|left"
                                    android:text="1999999"
                                    android:textAlignment="textStart"
                                    android:textColor="@android:color/darker_gray"/>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/latestLabel"
                            android:layout_below="@+id/firstline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:gravity="center_vertical|left"
                            android:text="赢家的方法"
                            android:textAlignment="textStart"
                            android:textColor="@color/shareButtonWordColor"/>

                        <TextView
                            android:id="@+id/priceInfoLabel"
                            android:layout_below="@id/latestLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="6dp"
                            android:textSize="13sp"
                            android:gravity="center_vertical|left"
                            android:text="199元/年"
                            android:textAlignment="textStart"
                            android:textStyle="normal"
                            android:textColor="@color/price_color"/>





                </RelativeLayout>


        </LinearLayout>

</LinearLayout>
