<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:background="@color/statusbar_background2"
              android:id="@+id/action_bar">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/statusbar_background2">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentLeft="true">
            <ImageButton
                android:id="@+id/search_btn"

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_search"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <ImageButton
                android:id="@+id/rongzi_btn"

                android:layout_width="60dp"
                android:layout_height="26dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/rongzi_btn_s"/>



            <ImageButton
                android:id="@+id/touzi_btn"

                android:layout_width="60dp"
                android:layout_height="26dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/touzi_btn"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/kefu_btn"

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_customer"/>
        </RelativeLayout>


    </RelativeLayout>





</LinearLayout>