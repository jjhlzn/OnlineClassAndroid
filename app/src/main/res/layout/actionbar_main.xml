<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/statusbar_background2">

        <RelativeLayout
            android:id="@+id/leftPart"
            android:layout_width="50dp"
            android:layout_height="match_parent"

            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentLeft="true">
            <ImageButton
                android:id="@+id/kefu_btn"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_customer"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rightPart"
            android:layout_toRightOf="@+id/leftPart"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/search_edit_field"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/round_edittext_border_mainpage"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:hint="信用卡、提额、关键词"
                android:textAlignment="center"
                android:paddingLeft="6dp"
                android:textColorHint="@color/hint_color"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="13dp"/>
        </LinearLayout>

       <include layout="@layout/actionbar_rightpart"
                android:id="@+id/rightPart"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
        />


    <LinearLayout
        android:id="@+id/actionbar_overlay_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/overlay_bg"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_alignParentBottom="true"
            android:background="@color/actionbar_line_color"></LinearLayout> -->

    </RelativeLayout>


